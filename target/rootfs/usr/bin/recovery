#!/bin/sh

# Show what we know...
show-scr

# Make a crude idle timeout of 10 minutes, forcing shutdown without going
# through /etc/init.d/shutdown; leave keep-alives (panic, request) unchanged
( sleep 600; poweroff -f ) &

/etc/init.d/usbether start
/etc/init.d/dbus-1 start
/etc/init.d/networking start
/etc/init.d/avahi-daemon start
/etc/init.d/telnetd start
/etc/init.d/dftpdevice start
/etc/init.d/vsftpd start

# Determine type of recovery we expect based on USB connection we find
# recovery-ftp & # Try to use FTP to pull recovery down from Linux
recovery-dftp & # Allow dftp to push recovery down from Windows

# echo "Try to mount patient's file systems"
# /etc/init.d/recovery-mounts start &
