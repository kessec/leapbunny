#!/bin/sh

case "$1" in
	start)
		logger -s -t "Emerald Base" -p local4.notice  "Starting nfs ..."	
		modprobe nfs
		;;
	stop)
		logger -s -t "Emerald Base" -p local4.notice  "Stopping nfs ..."	
		modprobe -r nfs
		;;
	restart)
		logger -s -t "Emerald Base" -p local4.notice  "Restarting nfs ..."	
		$0 stop
		$0 start
		;;
	*)
		echo "Usage: $0 {start|stop|restart}"
		exit 1
		;;
esac
                                                        
exit 0
