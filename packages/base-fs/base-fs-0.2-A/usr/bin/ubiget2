#!/bin/sh -e
source /usr/bin/ftp-pipe-functions
if [ -z "$1" -o ! -e /dev/$2 -o -z "$4" ]; then
   echo "Usage:"
   echo "    `basename $0` image.ubi mtd# offset len"
   echo "Formats <len> bytes starting at <offset> with a UBI image."
   usage_helper nandfmt -u -s "<offset>" -l "<len>"
   exit 1;
fi
if [ $(($4)) = 0 ]; then 
	echo "Failed to get len ($len) correctly";
	exit 1; 
fi
ftppipe $1 nandfmt -u -s $3 -l $4 /dev/$2
